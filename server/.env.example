# Ứng dụng
NODE_ENV=development
PORT=5000
APP_NAME="Customer Management API"
CLIENT_URL=http://localhost:3000

# Cơ sở dữ liệu PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=customer_management
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="Customer Management"

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=customer_management

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=false

# Bảo mật
RATE_LIMIT_WINDOW_MS=900000  # 15 phút
RATE_LIMIT_MAX=100          # Số request tối đa trong 1 cửa sổ thời gian

# Các cài đặt khác
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg
